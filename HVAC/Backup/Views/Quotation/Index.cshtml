                        </button>
                    </div>
                </div>

                <div class="col-md-3 text-md-end">
                    <a class="btn btn-primary waves-effect waves-light text-md-end btn_top" id="btnOpenCreate"><i class="mdi mdi-plus me-1"></i> New Quotation</a>
                </div>
            </div>
        </div>
    </div>







    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered mb-0" id="datatable" style="width:100%">
                    <thead class="table-light">
                        <tr>
                            <th>
                                Quotation Date

                            </th>
                            <th>Quotation No.</th>
                           
                            <th>Enquiry No.</th>
                            <th width="35%">
                                Project Details
                            </th>
                            <th>
                                Quoted Value
                            </th>
                            <th>
                                Quoted By
                            </th>
                            <th>
                                Status
                            </th>
                            <th></th>

                            <th>Action</th>
                        </tr>
                    </thead>


                    <tbody>
                        @foreach (var item in Model.Details)
                        {

                            <tr>


                                <td>
                                    @HVAC.Models.CommonFunctions.GetShortDateFormat(item.QuotationDate)

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.QuotationNo)
                                    @{

                                        if (@item.Version != 0)
                                        {
                                            <br />
                                            <div class="badge bg-success rounded">
                                                Version @item.Version  

                                            </div>
                                        }                                   
                                    

                                        if (@item.ProjectNo != "")
                                        {
                                            <br />
                                            <div class="badge bg-success rounded">
                                                @item.ProjectNo

                                            </div>
                                        }
                                    }
                                </td>                               
                                <td>
                                    @Html.DisplayFor(modelItem => item.EnquiryNo)
                                </td>
                                <td>
                                    <span class="text-over colorblue" style="width:120px">@item.ProjectName</span> <br />
                                    @Html.DisplayFor(modelItem => item.CityName) - @Html.DisplayFor(modelItem => item.CountryName)
                                </td>

                                <td style="text-align:right">
                                    @*@Html.DisplayFor(modelItem => item.QuotationValue)*@
                                    @HVAC.Models.CommonFunctions.GetFormatNumber(item.QuotationValue, "3")
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.EmployeeName)
                                </td>


                                <td>
                                    @{
                                        if (item.QuotationStatus == "Secured")
                                        {
                                            <span class="badge bg-success">@item.QuotationStatus</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">@item.QuotationStatus</span>
                                        }


                                    }
                                </td>
                                <td>

                                    <div class="dropdown">
                                        <a href="#" class="dropdown-toggle card-drop" data-bs-toggle="dropdown" aria-expanded="true">
                                            <i class="mdi mdi-dots-horizontal font-size-18" title="Sub Menus"></i>
                                        </a>

                                        <ul class="dropdown-menu dropdown-menu-end" style="position: absolute; inset: 0px 0px auto auto; margin: 0px; transform: translate3d(-84px, 27px, 0px);" data-popper-placement="bottom-end">
                                            @{
                                                if (item.JobHandOverID == 0 && item.QuotationStatus=="Secured")
                                                {
                                                    <li><a href="javascript:void(0)" onclick="ShowJobHandOver(@item.EnquiryID)" class="dropdown-item remove-list"><i class="mdi mdi-seal font-size-16 text-danger me-1"></i> Confirm Job</a></li>
                                                }
                                                else if (item.QuotationStatus == "Secured" && item.JobHandOverID > 0)
                                                {
                                                    if (@item.PONo != "")
                                                    {
                                                        <li><a href="/InwardPO/Create?id=@item.PurchaseOrderDetailId&QuotationID=0" class="dropdown-item remove-list"><i class="mdi mdi-vector-intersection font-size-16 text-danger me-1"></i> Client PO @item.PONo </a></li>
                                                    }
                                                    else
                                                    {
                                                        <li><a href="/InwardPO/Create?id=0&QuotationID=@item.QuotationID" class="dropdown-item remove-list"><i class="mdi mdi-vector-intersection font-size-16 text-danger me-1"></i> Client PO</a></li>
                                                    }
                                                    <li><a href="/InwardPO/Create?id=0&QuotationID=@item.QuotationID" class="dropdown-item remove-list"><i class="mdi mdi-vector-intersection font-size-16 text-danger me-1"></i> Material Request</a></li>

                                                }
                                            }
                                        </ul>
                                    </div>
                                    @*<div class="dropdown-menu dropdown-menu-end">

                                            <a class="dropdown-item" href="/Enquiry/Quotation?id=@item.EnquiryID">Quotation</a>


                                        </div>*@

                                </td>
                                <td>
                                    <div class="d-flex gap-3">
                                        <a href="@Url.Action("Create", new { id = item.QuotationID })" class="text-success" title="Edit Quotation"><i class="mdi mdi-pencil font-size-18"></i></a>
                                        @*<a href="@Url.Action("QuotationDetail", new { id = item.QuotationID })"
                                           class="text-primary" title="Quotation Details">
                                            <i class="mdi mdi-file-document-outline font-size-18"></i>
                                        </a>*@
                                        <a href="@Url.Action("Create", new { id = 0,EnquiryID=0,QuotationId=item.QuotationID })" class="text-primary" title="New Revision"><i class="mdi mdi-repeat font-size-18"></i></a>
                                        <a href="#" onclick="Delete(ID =@item.QuotationID)" class="text-danger" title="Delete Quotation"><i class="mdi mdi-delete font-size-18"></i></a>

                                        @*<a href="/Quotation/ReportPrint?id=@item.QuotationID" class="text-warning" title="Print Quotation"><i class="mdi mdi-printer font-size-18"></i></a>*@
                                        <a href="/Quotation/Print?id=@item.QuotationID" class="text-warning" title="View & Print Quotation"><i class="mdi mdi-printer font-size-18"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
}
<script type="text/javascript">


    function Delete(ID) {
        Swal.fire({ title: "Are you sure?", text: "Do you want to delete this?", icon: "warning", showCancelButton: !0, confirmButtonColor: "#34c38f", cancelButtonColor: "#f46a6a", confirmButtonText: "Yes, delete it!" }).then(
            function (t) {
                if (t.value) {
                    $.ajax({
                        type: "POST",
                        url: '/Quotation/DeleteQuotation',
                        datatype: "html",
                        data: {
                            'id': ID,
                            '__RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                        },
                        success: function (response) {
                            if (response.status == "OK") {
                                Swal.fire("Delete Status!", response.message, "success");
                                window.location.reload();
                            }
                            else {
                                Swal.fire("Delete Status!", response.message, "error");
                            }
                        }
                    });
                }
            });

    }
</script>
