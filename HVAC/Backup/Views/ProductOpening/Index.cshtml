@using (Html.BeginForm("Index", "ProductOpening", FormMethod.Get))
{
<div class="card">
    <div class="card-body">
        <div class="row align-items-end  mb-3">

            <div class="col-md-2">
                <div class="mb-2" title="Select the period in which you wish to retrieve the data">
                    <label class="col-form-label">Search Brand</label>
                    <input type="text" name="brand" value="@Request.QueryString["brand"]" class="form-control" placeholder="Enter Brand">

                </div>
            </div>


            <div class="col-md-2">
                <div class="mb-2" title="Select the period in which you wish to retrieve the data">
                    <label class="col-form-label">Search Product Family</label>
                    <input type="text" name="family" value="@Request.QueryString["family"]" class="form-control" placeholder="Enter Product">

                </div>
            </div>




            <div class="col-md-1">
                <div class="mb-2 text-md-start">
                    <button type="submit" class="btn btn-success waves-effect waves-light filter btn_top reload" id="btnreport">
                        <i class="bx bx-revision mt-1" style="font-size: 21px;"></i>
                    </button>
                </div>
            </div>


            <div class="col-md-7 text-md-end">
                <a class="btn btn-primary waves-effect waves-light" href="/ProductOpening/Create">
                    <i class="mdi mdi-plus me-1"></i> New Product Opening
                </a>
                <a href="@Url.Action("ProductOpeningExcel", "ProductOpening",
        new { brand = Request.QueryString["brand"], family = Request.QueryString["family"] })"
                   class="btn btn-success">
                    <i class="fa fa-file-excel" style="font-size:18px"></i> Download Excel
                </a>
            </div>
        </div>
    </div>
</div>
                <div class="card">
                    <div class="card-body">

                        <table class="table table-bordered mb-0" id="datatable" style="width:100%">
                            <thead class="table-light">
                                <tr>
                                    <th>Brand</th>
                                    <th>
                                        Product Name
                                    </th>
                                    <th>Model</th>
                                    <th>Unit</th>
                                    <th>
                                        Product Family
                                    </th>
                                    <th>
                                        Quantity
                                    </th>
                                    <th>
                                        Rate
                                    </th>
                                    <th>Value</th>
                                    <th>Action</th>
                                </tr>
                            </thead>

                            @foreach (var item in Model)
                            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BrandName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EquipmentType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemUnit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductFamilyName)

                </td>

                <td style="text-align:right">
                    @*@Html.DisplayFor(modelItem => item.SalesRate)*@
                    @HVAC.Models.CommonFunctions.GetBranchFormatNumber(item.Quantity)
                    @*@string.Format("{0:n2}", item.SalesRate)*@
                </td>
                <td style="text-align:right">
                    @HVAC.Models.CommonFunctions.GetBranchFormatNumber(item.Rate)
                    @*@Html.DisplayFor(modelItem => item.CostRate)
                        @string.Format("{0:n2}", item.CostRate)*@
                </td>
                <td style="text-align:right">
                    @HVAC.Models.CommonFunctions.GetBranchFormatNumber(item.Value)
                </td>
                <td>
                    <div class="d-flex gap-3">
                        <a href="@Url.Action("Create", new { id = item.OpeningID })" class="text-success"><i class="mdi mdi-pencil font-size-18"></i></a>
                        <a href="#" onclick="Delete(ID=@item.OpeningID)" class="text-danger"><i class="mdi mdi-delete font-size-18"></i></a>
                    </div>
                </td>
            </tr>                }

                        </table>
                    </div>
                </div>}
<script type="text/javascript">


    function Delete(ID) {
        Swal.fire({ title: "Are you sure?", text: "Do you want to delete this?", icon: "warning", showCancelButton: !0, confirmButtonColor: "#34c38f", cancelButtonColor: "#f46a6a", confirmButtonText: "Yes, delete it!" }).then(
            function (t) {
                if (t.value) {
                    $.ajax({
                        type: "POST",
                        url: '/ProductOpening/DeleteConfirmed',
                        datatype: "html",
                        data: {
                            'id': ID
                        },
                        success: function (response) {
                            if (response.status == "OK") {
                                Swal.fire("Delete Status!", response.message, "success");
                                window.location.reload();
                            }
                            else {
                                Swal.fire("Delete Status!", response.message, "error");
                            }
                        }
                    });
                }
            });
    }
</script>
