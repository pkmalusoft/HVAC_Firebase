@{
    Layout = null; // "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Job Details — JOB-00123</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    
 <style>
     body {
         font-family: Arial, sans-serif;
         margin: 20px;
         color: #333;
     }

     .container {
         display: flex;
         justify-content: space-between;
         gap: 20px;
     }

     .panel {
         flex: 1;
         padding: 20px;
         border: 1px solid #ccc;
         border-radius: 8px;
         background-color: #f9f9f9;
     }

     .left-panel h2, .right-panel h2 {
         margin-top: 0;
         color: #555;
         border-bottom: 2px solid #ddd;
         padding-bottom: 10px;
     }

     .details-table {
         width: 100%;
         border-collapse: collapse;
     }

         .details-table td {
             padding: 10px;
             border-bottom: 1px solid #eee;
         }

         .details-table tr:last-child td {
             border-bottom: none;
         }

     .value-item {
         display: flex;
         justify-content: space-between;
         padding: 10px 0;
         border-bottom: 1px solid #eee;
     }

         .value-item:last-child {
             border-bottom: none;
         }

     .total-value {
         font-weight: bold;
         font-size: 1.2em;
         color: #007bff;
     }
     </style>
</head>
<body>

    <div class="container">

        <div class="panel left-panel">
            <h2>Project Information</h2>
            <table class="details-table">
                <tr>
                    <td><strong>Project No:</strong></td>
                    <td>PROJ-2025-001</td>
                </tr>
                <tr>
                    <td><strong>Project Title:</strong></td>
                    <td>Website Redesign & Migration</td>
                </tr>
                <tr>
                    <td><strong>Customer Name:</strong></td>
                    <td>Innovate Solutions Inc.</td>
                </tr>
                <tr>
                    <td><strong>Customer Location:</strong></td>
                    <td>New York, USA</td>
                </tr>
                <tr>
                    <td><strong>Job Start Date:</strong></td>
                    <td>2025-09-01</td>
                </tr>
                <tr>
                    <td><strong>Job End Date:</strong></td>
                    <td>2025-11-15</td>
                </tr>
            </table>
        </div>

        <div class="panel right-panel">
            <h2>Financial Overview</h2>
            <div class="value-item">
                <span>Job Value:</span>
                <span>$15,000.00</span>
            </div>
            <div class="value-item">
                <span>Cost Value:</span>
                <span>$8,000.00</span>
            </div>
            <div class="value-item">
                <span>VAT:</span>
                <span>$2,250.00</span>
            </div>
            <div class="value-item">
                <span>Margin:</span>
                <span>$7,000.00</span>
            </div>
            <div class="value-item total-value">
                <span>Total Value:</span>
                <span>$17,250.00</span>
            </div>
        </div>

    </div>

    <!-- Optional Bootstrap JS (not needed for PDF) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
