                        @Html.HiddenFor(modelitem => item1.EquipmentName, new { @id = "QEquipmentName_" + @i, @class = "form-control", @readonly = "readonly" })
                        
                        @Html.HiddenFor(modelitem => item1.JobHandOverID, new { @id = "QJobHandOverID_" + @i })
                        @Html.HiddenFor(modelitem => item1.EquipmentID, new { @id = "QEquipmentID_" + @i })
                        @Html.HiddenFor(modelitem => item1.MRequestDetailID, new { @id = "QMRequestDetailID_" + @i })
