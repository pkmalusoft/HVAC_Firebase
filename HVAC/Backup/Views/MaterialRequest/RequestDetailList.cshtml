                        @Html.HiddenFor(modelitem => item1.Model, new { @id = "QtxtModel_" + @i })
                        <span class="color_blue">@item1.Model</span>
                    </td>
                    <td>
                        @Html.HiddenFor(modelitem => item1.Quantity, new { @id = "QtxtQty_" + @i })
                        <span class="color_blue">@item1.Quantity</span>
                    </td>
                    <td>
                        @Html.HiddenFor(modelitem => item1.StockStatus, new { @id = "QUnitTypeStockStatus_" + @i })
                        <span class="color_blue">@item1.StockStatus</span>
                    </td>                    
                    <td>
                        <a onclick="EditDetailEntry('@i')" href="javascript:void(0);" title="Edit Entry" class="text-primary"><i class="mdi mdi-pencil font-size-18"></i></a>
                        <a onclick="DeleteDetailEntry('@i')" href="javascript:void(0);" title="Delete Entry" class="text-danger"><i class="mdi mdi-delete font-size-18"></i></a>
                    </td>
                </tr>
