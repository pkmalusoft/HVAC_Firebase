@model List<HVAC.Models.NotificationModel>

@if (Model.Count > 0)
{
    foreach (var n in Model)
    {
        <a href="@Url.Action("MarkAsRead", "Notification", new { id = n.NotificationId })" class="text-reset notification-item">
            <div class="d-flex">
                <div class="avatar-xs me-3">
                    <span class="avatar-title bg-primary rounded-circle font-size-16">
                        <i class="mdi mdi-bell-outline"></i>
                    </span>
                </div>
                <div class="flex-1">
                    <h6 class="mb-1">@n.Title</h6>
                    <div class="font-size-12 text-muted">
                        <p class="mb-1">@n.Message</p>
                        <p class="mb-0">
                            <i class="mdi mdi-clock-outline"></i> @n.CreatedAt.ToString("dd MMM HH:mm")
                        </p>
                    </div>
                </div>
            </div>
        </a>
    }
}
else
{
    <div class="text-center p-3">
        <small class="text-muted">No unread notifications</small>
    </div>
}

