                                    <label class="required headinglabel">Port Name</label>
                                    @Html.TextBoxFor(model => model.Port1, new { @class = "form-control txttarget", @required = "required" })
                                    @Html.ValidationMessageFor(model => model.Port1)
                                    @Html.HiddenFor(model => model.PortID)
                                </div>

                                <div class="col-md-12 mb-2">
                                    <label class="required headinglabel">Port Code</label>
                                    @Html.TextBoxFor(model => model.PortCode, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.PortCode)
                                </div>

                                <div class="col-md-12 mb-2">
                                    <label class="required headinglabel">Port City</label>
                                    @Html.TextBoxFor(model => model.OriginCity, new { @class = "form-control", @required = "required" })
                                    @Html.HiddenFor(model => model.CityID, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.OriginCity)

                                </div>

                                <div class="col-md-12 mb-2">
                                    <label class="required headinglabel">Country</label>
                                    @*@Html.DropDownListFor(model => model.CountryID, (IEnumerable<SelectListItem>)ViewBag.country, "Select", new { @class = "form-control" })*@
                                    @*@Html.DropDownListFor(model => model.CountryID, new SelectList(ViewBag.country, "CountryID", "CountryName"), "Select Carrier", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.CountryID)*@
                                    @Html.TextBoxFor(model => model.OriginCountry, new { @class = "form-control", @readonly = "readonly", @required = "required" })
                                    @Html.HiddenFor(model => model.CountryID, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.OriginCountry)
                                </div>
                            </div>

                            <div class="row mt-3">
                                <div class="col-xs-12 butdivs">
                                    <a href='@Url.Action("Index", "Port", new { id = 0 })' class="float-right btn btn-secondary">Cancel</a>
                                    <input type="submit" value="Save" class="btn btn-success waves-effect waves-light float-right me-2" id="btnsave" />



                                </div>
                            </div>
                        </fieldset>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
