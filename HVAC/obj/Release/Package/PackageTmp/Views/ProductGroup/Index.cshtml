@model IEnumerable<HVAC.Models.ProductGroupVM>

@{
    ViewBag.Title = "List";
       ViewBag.pTitle = "Product Group";
    ViewBag.pageTitle = "Setup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<script type="text/javascript">
    $(document).ready(function () {
        $('#dataTables-example tfoot th').each(function () {
            var title = $(this).text();
            $(this).html('<input type="text" />');
        });


        var table = $('#dataTables-example').DataTable({ "sPaginationType": "full_numbers" });

        table.columns().every(function () {
            var that = this;

            $('input', this.footer()).on('keyup change', function () {
                if (that.search() !== this.value) {
                    that
                        .search(this.value)
                        .draw();
                }
            });
        });

    });


</script>

      @if (TempData["SuccessMsg"] != null)
    {
  
             <script type="text/javascript">
                 $(document).ready(function () {
                     //$.notify("@TempData["SuccessMsg"]", "success");
                 });
                                                </script>
    }
      <div class="card">
        <div class="card-body">
                <div class="col-md-12 mb-3 text-md-end">
<a  class="btn btn-primary waves-effect waves-light text-md-end" href="/ProductGroup/Create"><i class="mdi mdi-plus me-1"></i> New Product Group</a>
</div>
       <table class="table table-bordered mb-0" id="datatable" style="width:100%">
                <thead class="table-light">
                    <tr>
                        <th>
                            Product Type
                        </th>

                        <th>
                            Product Category
                        </th>
                        <th>
                            Product Group
                        </th>



                        <th>Action</th>
                    </tr>
        </thead>

@foreach (var item in Model) {
       <tr>
           <td>
               @Html.DisplayFor(modelItem => item.ProductTypeName)
           </td>
           <td>
               @Html.DisplayFor(modelItem => item.ProductCategoryName)
           </td>
           <td>
               @Html.DisplayFor(modelItem => item.ProductGroupName)
           </td>




           <td>
               <div class="d-flex gap-3">
                   <a href="@Url.Action("Create", new { id = item.ProductGroupID })" class="text-success"><i class="mdi mdi-pencil font-size-18"></i></a>
                   <a href="#" onclick="Delete(ID=@item.ProductGroupID)" class="text-danger"><i class="mdi mdi-delete font-size-18"></i></a>
               </div>
           </td>
       </tr>
}

</table>
        </div>
    </div>

<script type="text/javascript">
    

     function Delete(ID) {
        Swal.fire({ title: "Are you sure?", text: "Do you want to delete this?", icon: "warning", showCancelButton: !0, confirmButtonColor: "#34c38f", cancelButtonColor: "#f46a6a", confirmButtonText: "Yes, delete it!" }).then(
            function (t) {
                if (t.value) {
                     $.ajax({
                         type: "POST",
                         url: '/ProductGroup/DeleteConfirmed',
                         datatype: "html",
                         data: {
                             'id': ID
                         },
                         success: function (response) {
                             if (response.status == "OK") {
                                 Swal.fire("Delete Status!", response.message, "success");
                                 window.location.reload();
                             }
                             else {
                                 Swal.fire("Delete Status!", response.message, "error");
                             }
                         }
                     });
                }
            });
        }
</script>