@{
    string UserName = "";

    if (Session["UserName"] != null)
    {
        UserName = Session["UserName"].ToString();
    }
}
<style>
    .goog-te-gadget-simple {
        border: none;
    }

    .goog-te-gadget-simple {
        background: none !important;
    }

    .goog-te-gadget-icon {
        background-image: url('/assets/images/google-logo.png') !important;
        background-size: cover;
        background-position: unset !important;
    }

    .goog-te-gadget-icon {
        margin-left: 2px;
        margin-right: 2px;
        width: 23px !important;
        height: 20px !important;
    }
</style>
<header id="page-topbar">
    <div class="navbar-header">
        <div class="d-flex">
            <!-- LOGO -->
            <div class="navbar-brand-box">
                <a href=@Url.Action("Index", "Dashboard") class="logo logo-dark">
                    <span class="logo-sm">
                        @*<img src="~/assets/images/logo.svg" alt="" height="22">*@
                        <img src="~/Content/img/logo1.png" alt="" style="width:100%;height:100%" />
                    </span>
                    <span class="logo-lg">
                        @*<img src="~/Content/img/logo_truebook.png" alt="" height="172" />*@
                        <img src="~/assets/images/truebooklogo1.png" alt="" height="17" />
                    </span>
                </a>

                <a href=@Url.Action("Index", "Dashboard") class="logo logo-light">
                    <span class="logo-sm">
                        <img src="~/assets/images/logo1.png" style="width:100%;height:100%" alt="" />
                        @*<img src="~/Content/img/logo_truebook.png" alt="" height="22" />*@
                        @*<img src="~/assets/images/logo-light.svg" alt="" height="22">*@
                    </span>
                    <span class="logo-lg">
