@model HVAC.Models.JobHandOverVM
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    ul.ui-front {
        z-index: 1100;
    }

    .disabled-link {
        pointer-events: none;
        background-color: #dedede;
    }
</style>

@{

    ViewBag.pTitle = "Job Profile";
    ViewBag.pageTitle = "HVAC";
}

@using (Html.BeginForm("Create", "JobHandover", FormMethod.Post, new { @class = "needs-validation ", @novalidate = "novalidate" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "needs-validation" })



<div class="card">
    <div class="card-body">
      



        <div class="row">
            <div class="col-md-9">
                <div class="row">
                    <div class="col-md-8">  <div id="validations" style="color: red; margin-left: 7px; display: none">* Please fill mandatory fields</div></div>
                    <div class="col-md-4 text-md-end">
                        <input type="submit" value="Save" class="btn btn-success" id="btnSaveQuotation" />
                        <a href='@Url.Action("Index", "JobHandover", new { id = 0 })' class="btn btn-secondary" data-placement="right">Cancel</a>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        <div class="mb-2">
                            <label class="col-form-label required">Project Prefix</label>
                            @Html.TextBoxFor(mode => mode.ProjectPrefix, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-2">
                            <label class="col-form-label required">Project Number </label>
                            @Html.TextBoxFor(mode => mode.ProjectNumber, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-2">
                            <label class="col-form-label">Job Date</label>
                            <div class="docs-datepicker">
                                <div class="input-group">
                                    <input type="text" class="form-control docs-date" name="JobDate" id="JobDate" required value="@Convert.ToDateTime(@Model.JobDate).ToShortDateString()"
                                           placeholder="Pick a From Date" autocomplete="off">
                                    <button type="button"
                                            class="btn btn-secondary docs-datepicker-trigger"
                                            disabled>
                                        <i class="mdi mdi-calendar" aria-hidden="true"></i>
                                    </button>
                                </div>
                                <div class="docs-datepicker-container"></div>
                            </div>
                            <div class="invalid-feedback">
                                Please enter Job Date
                            </div>

                            
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label class="col-form-label required">Select Enquiry</label>
                        @Html.TextBoxFor(mode => mode.EnquiryNo, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-2">
                            <label class="col-form-label required">Project Title</label>
                            @Html.TextBoxFor(mode => mode.ProjectTitle, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label class="col-form-label required">Client</label>
                        @Html.TextBoxFor(mode => mode.ClientName, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <label class="col-form-label required">Job Completion Date</label>
                        <div class="docs-datepicker">
                            <div class="input-group">
                                <input type="text" class="form-control docs-date" name="CompletionDate" id="CompletionDate" required value="@Convert.ToDateTime(@Model.CompletionDate).ToShortDateString()"
                                       placeholder="Pick a From Date" autocomplete="off">
                                <button type="button"
                                        class="btn btn-secondary docs-datepicker-trigger"
                                        disabled>
                                    <i class="mdi mdi-calendar" aria-hidden="true"></i>
                                </button>
                            </div>
                            <div class="docs-datepicker-container"></div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-2">
                            <label class="col-form-label required">Site</label>
                            @Html.TextBoxFor(mode => mode.Site, new { @class = "form-control", @required = "required" })

                        </div>
                    </div>
                    <div class="col-md-3">
                        <label class="col-form-label required">Delivery Location</label>
                        @Html.TextBoxFor(mode => mode.DeliveryLocation, new { @class = "form-control", @required = "required" })
                    </div>
                    <div class="col-md-3">
                        <div class="mb-2">
                            <label class="col-form-label">Remarks</label>
                            @Html.TextBoxFor(mode => mode.Remarks, new { @class = "form-control", @required = "required" })
                            @*<input type="text" name="" class="form-control" id="QuotationDate" />*@
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3" style="border:2px solid #808080">
                <div class="row">
                    <h4 class="card-title">Job Value</h4>
                    <div class="col-md-6">
                        <label class="col-form-label required">Job Value</label>
                        @Html.TextBoxFor(mode => mode.JobValue, new { @class = "form-control", @readonly="readonly" })
                    </div>

                    <div class="col-md-6">
                        <label class="col-form-label required">Job Cost</label>
                        @Html.TextBoxFor(mode => mode.JobCost, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="col-md-6">
                        <label class="col-form-label required">Margin %</label>
                        @Html.HiddenFor(mode => mode.MarginPercent, new { @class = "form-control", @readonly = "readonly" })
                        @Html.TextBoxFor(mode => mode.Margin, new { @class = "form-control", @readonly = "readonly" })
                        @Html.HiddenFor(mode => mode.VatPercentage, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="col-md-6">
                        <label class="col-form-label required">Vat%</label>
                        @Html.TextBoxFor(mode => mode.VatAmount, new { @class = "form-control", @readonly = "readonly" })
                    </div>                    
                    <div class="col-md-6">
                        <label class="col-form-label required">Total Value</label>
                        @Html.TextBoxFor(mode => mode.TotalValue, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    <div class="card">
        <div class="card-body">
            <div class="row">
                <ul class="nav nav-tabs nav-tabs-custom nav-justified" role="tablist">
                    <li class="nav-item" role="presentation">
                        <a class="nav-link active" data-bs-toggle="tab" href="#po1" role="tab" aria-selected="true">
                            <span class="d-block d-sm-none"><i class="fas fa-home"></i></span>
                            <span class="d-none d-sm-block">Purchase Order</span>
                        </a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link" data-bs-toggle="tab" href="#bond1" role="tab" aria-selected="false" tabindex="-1">
                            <span class="d-block d-sm-none"><i class="far fa-user"></i></span>
                            <span class="d-none d-sm-block">Bond Details</span>
                        </a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link" data-bs-toggle="tab" href="#warranty1" role="tab" aria-selected="false" tabindex="-1">
                            <span class="d-block d-sm-none"><i class="far fa-envelope"></i></span>
                            <span class="d-none d-sm-block">Warranty</span>
                        </a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link" data-bs-toggle="tab" href="#payment1" role="tab" aria-selected="false" tabindex="-1">
                            <span class="d-block d-sm-none"><i class="fas fa-cog"></i></span>
                            <span class="d-none d-sm-block">Payment List</span>
                        </a>
                    </li>
                </ul>
               

                @*Tab pane*@
                <div class="tab-content p-3 text-muted">

                    <div class="tab-pane active" id="po1" role="tabpanel">
                        
                        @{Html.RenderPartial("POList", Model);}
                    </div>
                    <div class="tab-pane" id="bond1" role="tabpanel">
                      
                           
                            @{Html.RenderPartial("BondList", Model);}
                        </div>
                    <div class="tab-pane" id="warranty1" role="tabpanel">
                         
                        @{Html.RenderPartial("WarrantyList", Model);}
                    </div>
                    <div class="tab-pane" id="payment1" role="tabpanel">

                        <div class="row">
                            <div class="col-md-2">
                                <div class="mb-2">
                                    <label class="col-form-label">Payment Instrument</label>
                                    @Html.DropDownListFor(model => model.PaymentInstrumentId, new SelectList(@ViewBag.PaymentInstruments, "ID", "Instruments"), "Select", new { @class = "form-select" })

                                </div>
                                <div class="col-md-2">
                                    <div class="mb-2">
                                        <button type="button" class="btn btn-success waves-effect waves-light filter btn_top" id="btnaddclient" title="New Client" onclick="ShowClientEntry()">
                                            <i class="dripicons-plus mt-1" style="font-size: 18px;"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        @{Html.RenderPartial("PaymentList", Model);}
                    </div>
                            </div>
            </div>
        </div>
    </div>
          


                }
                @section scripts{
                    @*<script src="~/assets/js/app.js"></script>*@
                    <!--tinymce js-->
                    <script src="~/assets/libs/tinymce/tinymce.min.js"></script>

                    <!-- init js -->
                    <script src="~/assets/libs/parsleyjs/parsley.min.js"></script>
                    <script src="~/assets/js/pages/form-validation.init.js"></script>

                }
                <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>


