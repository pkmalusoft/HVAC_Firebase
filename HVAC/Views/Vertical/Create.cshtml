@model HVAC.Models.Vertical
@{

    ViewBag.pTitle = "Vertical - Create";
    ViewBag.pageTitle = "Vertical";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>

    function SaveVertical() {
        debugger;
        var id = 0;
        if ($('#VerticalsID').val() > 0) {
            id = $('#VerticalsID').val();

        }
        var protypeobj = {
            VerticalID: id,
            VerticalName: $('#VerticalsName').val()
            

        }
        debugger;
        $.ajax({
            type: "POST",
            url: '/Vertical/SaveProductVertical/',
            datatype: "html",
            data: { ProType: protypeobj },
            success: function (response) {
                if (response.status == "OK") {
                    Swal.fire("Save Status!", response.message, "success");
                    setTimeout(function () {
                        window.location.href = "/Vertical/Index";
                    }, 100)


                }
                else {
                    Swal.fire("Save Status!", response.message, "warning");
                }


            }
        });
    }

    function CheckVerticalExist(type, id, callback) {


        $.ajax({
            type: "Get",
            url: '/Vertical/ProductVerticalExist',
            datatype: "Json",
            data: {
                PType: type,
                ID: id
            },

            success: function (data) {

                if (data == "true") {

                    callback(true);
                }
                else {
                    callback(false);
                }

            }
        });


    }


</script>

<script>

    $(document).on("submit", ".needs-validation", function (e) {

        e.preventDefault();
        var id = 0;
                    if (@Model.VerticalsID > 0) {

                  $('#btnsave').html('Update');
            id =@Model.VerticalsID;
}




        var type = $('#VerticalsName').val();
       


        if (!type || type === ' ') {
            Swal.fire("Validation Error", "Please Enter Vertical Name.", "error");
            return;
        }

        //if (!describtion || describtion === ' ') {
        //    Swal.fire("Validation Error", "Please Enter Describtion.", "error");
        //    return;
        //}


        CheckVerticalExist(type, id, function (exists) {
            if (exists) {
                Swal.fire("Save Status!", "Vertical Already Exist", "warning");
            } else if (!exists) {

                SaveVertical();
            }
        });
    });

</script>


@using (Html.BeginForm("Create", "Vertical", FormMethod.Post, new { enctype = "multipart/form-data", @class = "needs-validation ", @novalidate = "novalidate" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <div id="alert" style="color:red;margin-left:7px;display:none">* Please fill mandatory fields</div>
        <div class="card">
            <div class="card-body">
                <div class="row">

                    <div class="col-md-3">
                        <div class="mb-2">
                            @Html.HiddenFor(model=>model.VerticalsID)
                            <label class="col-form-label">Vertcal Name</label>
                            @Html.TextBoxFor(model => model.VerticalsName , new { @class = "form-control txttarget", @autocomplete = "off", @required = "required" })
                            @Html.ValidationMessageFor(model => model.VerticalsName)

                            <div class="invalid-feedback">
                                Please enter Vertical
                            </div>
                        </div>
                    </div>
                 


                    <div class="col-md-12 text-md-end">
                        <input type="submit" value="Save" class="btn btn-success" id="btnsave" />



                        <a href='@Url.Action("Index", "Vertical", new { id = 0 })' class="btn btn-secondary">Cancel</a>

                    </div>
                </div>
            </div>
        </div>
    </fieldset>


}
