@model HVAC.Models.EnquiryVM
@{
    Layout = null;
    var i = 0;
}

    <div class="card">
        <div class="card-header bg-transparent border-bottom">
            <div class="d-flex flex-wrap align-items-start">
                @*<div class="me-2">
                    <h5 class="card-title mt-1 mb-0">Updations</h5>
                </div>*@
                <ul class="nav nav-tabs nav-tabs-custom card-header-tabs ms-auto" role="tablist">
                    <li class="nav-item" role="presentation">
                        <a class="nav-link active" data-bs-toggle="tab" href="#enquiry-document" role="tab" aria-selected="true">
                            Document
                        </a>
                    </li>
                    @*<li class="nav-item" role="presentation">
                        <a class="nav-link" data-bs-toggle="tab" href="#enquiry-quotation" role="tab" aria-selected="false" tabindex="-1">
                            Quotation
                        </a>
                    </li>*@                    
                    <li class="nav-item" role="presentation">
                        <a class="nav-link" data-bs-toggle="tab" href="#enquiry-log" role="tab" aria-selected="true">
                            History
                        </a>
                    </li>
                </ul>
            </div>

        </div>

        <div class="card-body">

            <div data-simplebar="init" style="max-height: 295px;" class="simplebar-scrollable-y">
                <div class="simplebar-wrapper" style="margin: 0px;">
                    <div class="simplebar-height-auto-observer-wrapper"><div class="simplebar-height-auto-observer"></div></div><div class="simplebar-mask">
                        <div class="simplebar-offset" style="right: 0px; bottom: 0px;">
                            <div class="simplebar-content-wrapper" tabindex="0" role="region" aria-label="scrollable content" style="height: auto; overflow: hidden scroll;">
                                <div class="simplebar-content" style="padding: 0px;">
                                    <!-- Tab panes -->
                                    <div class="tab-content">
                                        <div class="tab-pane" id="enquiry-quotation" role="tabpanel">
                                            <ul class="list-group list-group-flush">
                                                @foreach (var item in Model.QuotationDetails)
                                                {

                                                    <li class="list-group-item py-3" id="trclient_@i">
                                                        <div class="d-flex">
                                                            <div class="me-3">
                                                                @{
                                                                    if (item.QuotationStatus == "Secured")
                                                                    {
                                                                        <span class="badge bg-success">@item.QuotationStatus</span>
                                                                    }
                                                                    else if (item.QuotationStatus == "Lost")
                                                                    {
                                                                        <span class="badge bg-danger">@item.QuotationStatus</span>
                                                                    }
                                                                    else
                                                                    {
                                                                        <span class="badge bg-warning">@item.QuotationStatus</span>
                                                                    }
                                                                }
                                                            </div>

                                                            <div class="align-self-center overflow-hidden me-auto">
                                                                <div>
                                                                    <h5 class="font-size-14 text-truncate"><a href="javascript: void(0);" class="text-dark"> @item.QuotationNo "/" +  item.Version </a></h5>
                                                                    <p class="text-muted mb-0"> @item.QuotationDate.Value.ToShortDateString()</p>
                                                                    <p>@item.EmployeeName</p>
                                                                </div>
                                                            </div>

                                                            <div class="dropdown ms-2">
                                                                <a class="text-muted font-size-14" href="#" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                                    <i class="mdi mdi-dots-horizontal"></i>
                                                                </a>

                                                                <div class="dropdown-menu dropdown-menu-end">
                                                                    <a class="dropdown-item" href="#">Edit</a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </li>
                                                }
                                            </ul>
                                        </div>
                                        <!-- end tab pane -->

                                        <div class="tab-pane active show" id="enquiry-document" role="tabpanel">

                                            <div class="table-responsive">
                                                <table class="table table-nowrap align-middle table-hover mb-0">
                                                    <tbody>
                                                        @foreach (var item in Model.DocumentDetails)
                                                        {
                                                            <tr>
                                                                <td style="width: 45px;">
                                                                    <div class="avatar-sm">
                                                                        <span class="avatar-title rounded-circle bg-primary-subtle  font-size-24" style="color:white">
                                                                            <i class="bx bxs-file-doc"></i>
                                                                        </span>
                                                                    </div>
                                                                </td>
                                                                <td>
                                                                    <h5 class="font-size-14 mb-1"><a href="javascript: void(0);" class="text-dark">@item.DocumentTitle</a></h5>
                                                                    <small>Size : 3.25 MB</small>
                                                                </td>
                                                                <td>
                                                                    <div class="text-center">
                                                                        @{
                                                                            if (item.Filename != "")
                                                                            {
                                                                                <a href="JavaScript:void(0)" onclick="Downloadfile('@item.Filename')" ; title="Download Document"><i class="mdi mdi-download font-size-18 "></i></a>
                                                                            }
                                                                            else
                                                                            {
                                                                                <a href="JavaScript:void(0)" class="text-dark"><i class="bx bx-download h3 m-0"></i></a>
                                                                            }
                                                                        }

                                                                    </div>
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                            <div class="mb-2">
                                                <button type="button" class="btn btn-primary waves-effect waves-light filter btn_top" title="New Client" onclick="ShowDocumentEntry()">
                                                    <i class="bx bx-plus" style="font-size: 18px;"></i> New Document
                                                </button>
                                            </div>
                                            @*<div class="col-md-12 text-md-end">
            <a class=" font-size-14 text-primary" href="#" role="button" title="New Document" onclick="ShowDocumentEntry()" aria-expanded="false">
                <i class="dripicons-plus mt-1 text-primary" style="font-size: 22px;"></i>
            </a>
        </div>*@
                                            @*<div class="input-group gap-2 m-2">
                                                <button type="button" class="btn btn-primary waves-effect waves-light filter btn_top" id="btnaddclient" title="Insert into Grid" onclick="AddClient()">
                                                    <i class="dripicons-enter mt-1" style="font-size: 18px;"></i>
                                                </button>
                                            </div>*@
                                        </div>
                                        <!-- end tab pane -->
                                        <div class="tab-pane" id="enquiry-log" role="tabpanel">

                                            <ul class="list-group list-group-flush">
                                                @foreach (var item in Model.AuditLogDetails)
                                                {
                                                    <li class="list-group-item py-3">
                                                        <div class="d-flex">
                                                            @*<div class="me-3">
                                                                <img src="assets/images/small/img-6.jpg" alt="" class="avatar-md h-auto d-block rounded">
                                                            </div>*@

                                                            <div class="align-self-center overflow-hidden me-auto">
                                                                <div>
                                                                    <h5 class="font-size-14 text-truncate"><a href="javascript: void(0);" class="text-dark">@item.Remarks</a></h5>
                                                                    <p class="text-muted mb-0">@item.TransDate</p>
                                                                </div>
                                                            </div>

                                                            @*<div class="dropdown ms-2">
                                                                <a class="text-muted font-size-14 show" href="#" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                                                    <i class="mdi mdi-dots-horizontal"></i>
                                                                </a>

                                                                <div class="dropdown-menu dropdown-menu-end show" style="position: absolute; inset: 0px 0px auto auto; margin: 0px; transform: translate3d(0px, 22px, 0px);" data-popper-placement="bottom-end">
                                                                    <a class="dropdown-item" href="#">Action</a>
                                                                    <a class="dropdown-item" href="#">Another action</a>
                                                                    <a class="dropdown-item" href="#">Something else here</a>
                                                                </div>
                                                            </div>*@

                                                        </div>
                                                    </li>
                                                }
                                                    

                                                </ul>
                                        </div>
                                    </div>
                                    <!-- end tab content -->
                                </div>
                            </div>
                        </div>
                    </div><div class="simplebar-placeholder" style="width: 698px; height: 323px;"></div>
                </div><div class="simplebar-track simplebar-horizontal" style="visibility: hidden;"><div class="simplebar-scrollbar" style="width: 0px; display: none;"></div></div><div class="simplebar-track simplebar-vertical" style="visibility: visible;"><div class="simplebar-scrollbar" style="height: 269px; transform: translate3d(0px, 0px, 0px); display: block;"></div></div>
            </div>
        </div>
    </div>
 