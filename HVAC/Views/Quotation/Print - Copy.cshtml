@model HVAC.Models.QuotationVM
@{
    ViewBag.Title = "Print";
    if (Model.ReportClass != "")
    {
        Layout = null;
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

}

<style>
    .pdfenable {
        display: none;
    }
</style>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Quotation No. - @Model.QuotationNo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-size: 14px;
        }

        .important-notes {
            font-size: 13px;
            color: #d9534f;
            font-weight: bold;
        }

        .table th, .table td {
            padding: 6px;
            vertical-align: middle;
        }

        .bordered {
            border: 1px solid #000;
            padding: 5px;
        }

        .highlight {
            background: #f8f9fa;
            font-weight: bold;
        }

        .po-header {
            font-size: 16px;
            font-weight: bold;
        }

        .footer {
            margin-top: 20px;
            font-size: 12px;
            text-align: center;
        }
    </style>

</head>
<body>
    <div class="container">
        @Html.HiddenFor(mode => mode.QuotationID, new { @class = "form-control" })
        <!-- Header with Logo & Addresses -->
        <div style="border-bottom:2px solid #000; padding-bottom:10px; margin-bottom:20px; white-space:nowrap;">

            <!-- Left: Logo + Company Address -->
            <div style="display:inline-block; vertical-align:top; width:49%; white-space:normal;">
                <img src="@Url.Content("~/assets/images/airmechlogo.png")" style="height:60px; margin-bottom:5px;" alt="Company Logo" /><br />
            </div>



        </div>

        <div class="pdf-two-col mt-3">
            <h2 style="margin:0; font-weight:bold; text-transform:uppercase;text-align:center">Quotation</h2>
            <div class="pdf-col">

                <p>
                    <strong>OUR REF:</strong> @Model.EnquiryNo<br />
                    <strong>Date:</strong> @Convert.ToDateTime(@Model.QuotationDate).ToString("dd-MMM-yyyy")<br />

                    <strong>Project Name:</strong> @Model.ProjectName<br />
                    <strong>M/s.Oasis Grace LLC</strong><br />
                    <strong>Ruwi, Sultanate of Oman. </strong><br />
                    <strong>Kind Attn:Mr.Jeen / Mr.Rifnas  </strong>
                </p>
            </div>
            <div class="pdf-col">
                <p>
                    <strong>@Model.ProjectName:</strong> o  <br />
                    <strong>@Model.SubjectText </strong>
                </p>
            </div>
        </div>

        <!-- Items Table -->
        <table class="table table-bordered">
            <thead class="table-light">
                <tr>

                    <th>Description</th>
                    <th>Model</th>
                    <th>Qty</th>
                    <th>Rate</th>
                    <th>Amount</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.QuotationDetails)
                {
                    <tr>

                        <td>@item.Description</td>
                        <td>@item.Model</td>
                        <td>@item.Quantity</td>

                        <td>@Convert.ToDecimal(@item.UnitRate).ToString("N2")</td>
                        <td>@Convert.ToDecimal(item.Amount).ToString("N2")</td>

                    </tr>
                }
            </tbody>
        </table>


        <div class="pdf-two-col">

            <!-- LEFT SIDE: Important Notes -->
            <div class="pdf-col">

                <ul>
                    @foreach (var note in Model.QuotationScopeofWork)
                    {
                        <h5 class="important-notes">Supply of  @note.EquipmentName Model- @note.Model ( Qty : @note.Qty) </h5>
                        foreach (var note1 in note.Items)
                        {
                            <li>@Html.Raw(Html.Encode(note1.Description))</li>
                        }
                    }
                    <br />
                    <br />
                    <br />
                </ul>
            </div>


        </div>





        <!-- Footer -->
        <div class="footer">
            <hr style="margin:30px 0; border-top:2px solid #000;" />

            <!-- Signatory Section -->
            <div style="width:100%; text-align:center; margin-top:50px; white-space:nowrap;">

                <!-- Received By -->
                <div style="display:inline-block; width:32%; text-align:center; vertical-align:top;">
                    <div style="height:60px; border-bottom:1px solid #000; margin-bottom:5px;"></div>
                    <strong>For AIRMECH OMAN L.L.C</strong><br />

                </div>

            </div>

        </div>

    </div>
</body>
</html>








