                <span id="QExEquipment_@i">@item1.EquipmentName</span>

            </td>
            <td style="text-align:left">
                @Html.HiddenFor(modelitem => item1.ID, new { @id = "QExclusionID_" + @i, @class = "form-control", @readonly = "readonly" })



                @Html.HiddenFor(modelitem => item1.EquipmentID, new { @id = "QExEquipmentID_" + @i, @class = "form-control", @readonly = "readonly" })
                @Html.HiddenFor(modelitem => item1.Description, new { @id = "QtxtExDescription_" + @i, @class = " form-control-sm", @style = "width:200px" })

                <span id="QExclusionDescription_@i">@Html.Raw(@item1.Description)</span>

