            <th width="600px">Description</th>
            <th width="10%">Action</th>

        </tr>
    </thead>
    <tbody class="" style="text-align:left">

        @foreach (var item1 in Model.QuotationExclusionDetails)
        {

        <tr id="quodtr_@i">
            <td>

                @*@{
                    if (item1.Checked)
                    {
                        <input type="checkbox" id="chkExclusions_@i" checked />
                    }
                    else
                    {
                        <input type="checkbox" id="chkExclusions_@i" checked />
                    }
                }*@
                @(i+1)
            </td>
            <td style="text-align:left">


