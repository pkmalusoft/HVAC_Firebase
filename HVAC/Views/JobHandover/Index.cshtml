                    </tr>
                </thead>


                <tbody>
                    @foreach (var item in Model.Details)
                    {

                    <tr>


                        <td>
                            @HVAC.Models.CommonFunctions.GetShortDateFormat(item.JobDate)

                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProjectNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EnquiryNo)
                        </td>
