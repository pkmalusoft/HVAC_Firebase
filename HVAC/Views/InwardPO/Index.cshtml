@model HVAC.Models.JobPOSearch

@{
    ViewBag.Title = "List";
    ViewBag.pTitle = "Client PO";
    ViewBag.pageTitle = "HVAC";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">

    $(document).ready(function () {
        $('#dataTables-example tfoot th').each(function () {
            var title = $(this).text();
            $(this).html('<input type="text" style="width:100%" />');
        });


        var table = $('#dataTables-example').DataTable();

        table.columns().every(function () {
            var that = this;

            $('input', this.footer()).on('keyup change', function () {
                if (that.search() !== this.value) {
                    that
                        .search(this.value)
                        .draw();
                }
            });
        });

    });


</script>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-body">
            <div class="row">


                <div class="col-md-2">
                    <label for="FromDate" class="col-form-label">From Date</label>
                    @*@Html.TextBoxFor(mode => mode.FromDate, new { @class = "form-control text-right color_blue_border" })*@
                    <div class="docs-datepicker">
                        <div class="input-group">
                            <input type="text" class="form-control docs-date" name="FromDate" id="FromDate1"
                                   placeholder="Pick a From Date" autocomplete="off" value="@Model.FromDate.ToShortDateString()" />
                            <button type="button"
                                    class="btn btn-secondary docs-datepicker-trigger" )
                                    disabled>
                                <i class="mdi mdi-calendar" aria-hidden="true"></i>
                            </button>
                        </div>
                        <div class="docs-datepicker-container"></div>
                    </div>
                </div>

                <div class="col-md-2">
                    <label for="ToDate" class="col-form-label">To Date</label>
                    @*@Html.TextBoxFor(mode => mode.ToDate, new { @class = "form-control text-right color_blue_border" })*@
                    <div class="docs-datepicker">
                        <div class="input-group">
                            <input type="text" class="form-control docs-date" name="ToDate" id="ToDate1" data-date-format="dd/MM/yyyy" data-date-autoclose="true" data-provide="datepicker"
                                   placeholder="Pick a To date" autocomplete="off" value="@Model.ToDate.ToShortDateString()">
                            <button type="button"
                                    class="btn btn-secondary docs-datepicker-trigger"
                                    disabled>
                                <i class="mdi mdi-calendar" aria-hidden="true"></i>
                            </button>
                        </div>
                        <div class="docs-datepicker-container"></div>
                    </div>
                </div>
                <div class=" col-md-2">
                    <div class="mb-2">
                        <label for="Receipt No." class="col-form-label">Project No.</label>
                        @Html.TextBoxFor(model => model.ProjectNo, new { @class = "form-control" })
                    </div>
                </div>

                <div class=" col-md-2">
                    <div class="mb-2">
                        <label for="Receipt No." class="col-form-label">PO No.</label>
                        @Html.TextBoxFor(model => model.PONo, new { @class = "form-control" })
                    </div>
                </div>




                <div class="col-md-1">
                    <div class="mb-2">
                        <button type="submit" class="btn btn-sm btn-success" style="margin-top:35px">
                            <i class="mdi mdi-refresh" style="font-size: 18px;"></i>
                        </button>
                    </div>
                </div>

                <div class="col-md-3 text-md-end">

                    @*<a class="btn btn-primary waves-effect waves-light text-md-end btn_top" href="/InwardPO/Create"><i class="mdi mdi-plus me-1"></i> New Client PO</a>*@
                </div>
            </div>
        </div>
    </div>







    <div class="card">
        <div class="card-body">

            <table class="table table-bordered mb-0" id="datatable" style="width:100%">
                <thead class="table-light">
                    <tr>
                        <th>
                            PO Date

                        </th>
                        <th>PO No.</th>
                        <th>Project No.</th>
                         
                        <th>Var No.</th>

                        <th>
                            Project Details
                        </th>
                        <th>
                            PO Value
                        </th>
                        <th>
                            Quoted By
                        </th>
                        @*<th>
            Status
        </th>*@
                        @*<th></th>*@

                        <th>Action</th>
                    </tr>
                </thead>


                <tbody>
                    @foreach (var item in Model.Details)
                    {

                        <tr>


                            <td>
                                @HVAC.Models.CommonFunctions.GetShortDateFormat(item.PODate)

                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PONumber)
                                @{
                                    if (item.MRequestNo != "")
                                {
                                        <span style="color:blue" >@item.MRequestNo</span>
                                }

                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProjectNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.VarNo)
                            </td>
                            <td>
                                <span class="text_over">
                                    @item.ProjectName
                                </span>
                                
                            </td>

                            <td style="text-align:right">
                                @HVAC.Models.CommonFunctions.GetFormatNumber(item.TotalValue, "3")

                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedByName)
                            </td>

                            <td>
                                <div class="d-flex gap-3">
                                    <a href="@Url.Action("Create", new { id = item.ID })" class="text-success" title="Edit PO"><i class="mdi mdi-pencil font-size-18"></i></a>
                                    @{
                                        if (item.MRequestNo == "")
                                        {
                                            <a class="text-primary" onclick="GenerateMRequest()" href="javascript:void(0)" title="Generate Material Request">MR</a>
                                        }
                                    }
                                    <a href="#" onclick="Delete(ID =@item.ID)" class="text-danger" title="Delete PO"><i class="mdi mdi-delete font-size-18"></i></a>
                                    <a href="/InwardPO/ReportPrint?id=@item.ID" class="text-warning" title="Print InwardPO"><i class="mdi mdi-printer font-size-18"></i></a>

                                    <a href="/InwardPO/PrintPreview?id=@item.ID" class="text-primary" title="View Invoice"><i class="mdi mdi-eye font-size-18"></i></a>
                                    <a href="/InwardPO/PrintPdf?id=@item.ID" class="text-warning" title="Download PDF"><i class="mdi mdi-file-download font-size-18"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
}

<div class="modal fade" id="mrpopup" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">
                    Add Material Request
                </h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <div class="container-fluid" id="estimationdetailContainer">
                    <div class="col-md-12">
                        <label class="col-form-label required">Notify To</label>
                        @Html.DropDownList("StoreKeeperID", new SelectList(ViewBag.EmployeeMaster, "EmployeeID", "FirstName"), "Select Engineer", new { @class = "form-select", @id = "StoreKeeperID", @required = "required", @tabindex = "2" })
                    </div>

                </div>
            </div>
            <div class="modal-footer" style="padding-top: 5px">
                <span class="error text-left" id="spanequiperror"></span>
                <button type="button" class="btn btn-primary" id="btnAddRequest" onclick="SaveMRequest()">Add Material Request</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">

        function GenerateMRequest() {
            $('#mrpopup').modal('show');
        }

        function SaveMRequest() {
            //GenerateMRequest
            $('#btnAddRequest').attr('disabled', 'disabled');
            Swal.fire({ title: "Are you sure?", text: "This action will make automatic Material Request to Notify by the Store Incharge !", icon: "warning", showCancelButton: !0, confirmButtonColor: "#34c38f", cancelButtonColor: "#f46a6a", confirmButtonText: "Yes, Add Material Request" }).then(
                function (t) {
                    if (t.value) {
                        var _ClientPOID = $('#ID').val();
                        var _Storekeeperid = $('#StoreKeeperID').val();
                        $.ajax({
                            type: "Post",
                            url: '/InwardPO/GenerateMRequest/',
                            datatype: "json",
                            data: { ClientPOID: _ClientPOID, Storekeeperid: _Storekeeperid },
                            success: function (response) {
                                if (response.status == "OK") {
                                    Swal.fire("Save Status!", response.message, "success");
                                    $('#btnAddRequest').removeAttr('disabled');
                                }
                                else {
                                    Swal.fire("Save Status!", response.message, "warning");
                                    $('#btnAddRequest').removeAttr('disabled');
                                }
                            }
                        });
                    }
                });
        }
        function Delete(ID) {
            Swal.fire({ title: "Are you sure?", text: "Do you want to delete this?", icon: "warning", showCancelButton: !0, confirmButtonColor: "#34c38f", cancelButtonColor: "#f46a6a", confirmButtonText: "Yes, delete it!" }).then(
                function (t) {
                    if (t.value) {
                        $.ajax({
                            type: "POST",
                            url: '/InwardPO/DeleteConfirmed',
                            datatype: "html",
                            data: {
                                'id': ID
                            },
                            success: function (response) {
                                if (response.status == "OK") {
                                    Swal.fire("Delete Status!", response.message, "success");
                                    window.location.reload();
                                }
                                else {
                                    Swal.fire("Delete Status!", response.message, "error");
                                }
                            }
                        });
                    }
                });

        }
    </script>
    }