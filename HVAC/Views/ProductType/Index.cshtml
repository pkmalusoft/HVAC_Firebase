@model HVAC.Models.EquipmentTypeSearch

@{
    ViewBag.pTitle = "Product Type";
    ViewBag.pageTitle = "Setup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        $('#dataTables-example tfoot th').each(function () {
            var title = $(this).text();
            $(this).html('<input type="text" />');
        });


        var table = $('#dataTables-example').DataTable({ "sPaginationType": "full_numbers" });

        table.columns().every(function () {
            var that = this;

            $('input', this.footer()).on('keyup change', function () {
                if (that.search() !== this.value) {
                    that
                        .search(this.value)
                        .draw();
                }
            });
        });

    });


</script>

@using (@Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-2">
                            <label class="col-form-label required">Brand</label>
                            @Html.DropDownListFor(model => model.BrandID, new SelectList(@ViewBag.Brand, "BrandID", "BrandName"), "Select", new { @class = "form-select", @required = "required" })

                        </div>
                        <div class="col-md-1">
                            <div class="mb-2">
                                <button type="submit" class="btn btn-sm btn-success" style="margin-top:35px">
                                    <i class="mdi mdi-refresh" style="font-size: 18px;"></i>
                                </button>
                            </div>
                        </div>
                        <div class="col-md-9 text-md-end">
                            <a class="btn btn-primary waves-effect waves-light btn_top " href="/ProductType/Create"><i class="mdi mdi-plus me-1"></i> New Product Type</a>
                        </div>
                    </div>

                    <div class="">
                        <table class="table align-middle table-nowrap" id="datatable">
                            <thead class="table-light">
                                <tr>

                                    <th>
                                        Brand
                                    </th>
                                    <th>
                                        Product Type
                                    </th>
                                    <th>
                                        Product Family
                                    </th>
                                    <th>Action</th>
                                </tr>
                            </thead>

                            @foreach (var item in Model.Details)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelitem => item.BrandName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelitem => item.EquipmentType1)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ProductFamilyName)
                                    </td>

                                    <td>
                                        <div class="d-flex gap-3">
                                            <a href="@Url.Action("Create", new { id = item.ID })" class="text-success"><i class="mdi mdi-pencil font-size-18"></i></a>
                                            <a href="@Url.Action("Details", new { id = item.ID })" class="text-primary"><i class="mdi mdi-eye font-size-18"></i></a>
                                            <a href="#" onclick="Delete(ID =@item.ID)" class="text-danger"><i class="mdi mdi-delete font-size-18"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            }

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
    <script type="text/javascript">
        function Delete(ID) {
            Swal.fire({ title: "Are you sure?", text: "You won't be able to revert this!", icon: "warning", showCancelButton: !0, confirmButtonColor: "#34c38f", cancelButtonColor: "#f46a6a", confirmButtonText: "Yes, delete it!" }).then(
                function (t) {
                    if (t.value) {
                        $.ajax({
                            type: "Post",
                            url: '/ProductType/DeleteProductType',
                            datatype: "json",
                            data: {
                                'id': ID
                            },
                            success: function (response) {
                                if (response.status == "OK") {
                                    Swal.fire("Deleted!", response.message, "success");
                                    window.location.reload();
                                }
                                else
                                    Swal.fire("Delete Failed!", response.message, "error");
                            }
                        });
                    }
                });

        }
    </script>


