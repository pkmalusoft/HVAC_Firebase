@model HVAC.Models.EnquirySearch

@{
    ViewBag.Title = "List";
    ViewBag.pTitle = "Enquiry";
    ViewBag.pageTitle = "HVAC";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
   
    $(document).ready(function () {
        $('#projectList-table tfoot th').each(function () {
            var title = $(this).text();
            $(this).html('<input type="text" style="width:100%" />');
        });


        var table = $('#projectList-table').DataTable();

        table.columns().every(function () {
            var that = this;

            $('input', this.footer()).on('keyup change', function () {
                if (that.search() !== this.value) {
                    that
                        .search(this.value)
                        .draw();
                }
            });
        });

    });


</script>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-body">
            <div class="row">


                <div class="col-md-2">
                    <label for="FromDate" class="col-form-label">From Date</label>
                    @*@Html.TextBoxFor(mode => mode.FromDate, new { @class = "form-control text-right color_blue_border" })*@
                    <div class="docs-datepicker">
                        <div class="input-group">
                            <input type="text" class="form-control docs-date" name="FromDate" id="FromDate1"
                                 placeholder="Pick a From Date" autocomplete="off" value="@Model.FromDate.ToShortDateString()" />
                            <button type="button"
                                    class="btn btn-secondary docs-datepicker-trigger")
                                    disabled>
                                <i class="mdi mdi-calendar" aria-hidden="true"></i>
                            </button>
                        </div>
                        <div class="docs-datepicker-container"></div>
                    </div>
                </div>

                <div class="col-md-2">
                    <label for="ToDate" class="col-form-label">To Date</label>
                    @*@Html.TextBoxFor(mode => mode.ToDate, new { @class = "form-control text-right color_blue_border" })*@
                    <div class="docs-datepicker">
                        <div class="input-group">
                            <input type="text" class="form-control docs-date" name="ToDate" id="ToDate1" data-date-format="dd/MM/yyyy" data-date-autoclose="true" data-provide="datepicker"
                                   placeholder="Pick a To date" autocomplete="off" value="@Model.ToDate.ToShortDateString()">
                            <button type="button"
                                    class="btn btn-secondary docs-datepicker-trigger"
                                    disabled>
                                <i class="mdi mdi-calendar" aria-hidden="true"></i>
                            </button>
                        </div>
                        <div class="docs-datepicker-container"></div>
                    </div>
                </div>
                <div class=" col-md-2">
                    <div class="mb-2">
                        <label for="Receipt No." class="col-form-label">Search Enquiry No.</label>
                        @Html.TextBoxFor(model => model.EnquiryNo, new { @class = "form-control text-right ora_border" })
                    </div>
                </div>





                <div class="col-md-1">
                    <div class="mb-2">
                        <button type="submit" class="btn btn-sm btn-success" style="margin-top:35px">
                            <i class="mdi mdi-refresh" style="font-size: 18px;"></i>
                        </button>
                    </div>
                </div>
                @*<a href="JavaScript:void(0)" onclick="exportexcel()" class="btn btn-primary"> Report PDF </a>*@

            <div class="col-md-5 text-md-end">
                @*<button type="button" class="btn btn-success waves-effect waves-light filter btn_top me-1" id="btnreport" title="Export to Excel" onclick="ExportExcel()">
            <i class="far fa-file-excel mt-1" style="font-size: 21px;"></i>
        </button>
        <button class="refresh_img small_btn_mar hide" id="btnreport" type="submit"><img src="/Content/img/refresh.png" alt="logolarge"></button>*@

                <a class="btn btn-primary waves-effect waves-light text-md-end btn_top" href="/Enquiry/Create"><i class="mdi mdi-plus me-1"></i> New Enquiry</a>
            </div>
            </div>
        </div>
    </div>







    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table project-list-table align-middle table-nowrap dt-responsive nowrap w-100 table-borderless dataTable no-footer dtr-inline" id="projectList-table" style="width:100%">
                    <thead class="table-light">
                        <tr>
                            
                            <th>
                                Enquiry Date

                            </th>
                            <th>Enquiry No.</th>
                            <th>
                                Project Details
                            </th>
                            <th>Location</th>
                            <th>
                                Priority
                            </th>
                            <th>
                                Enquiry Stage
                            </th>



                            <th>
                                Enquiry Status
                            </th>
                            <th></th>

                            <th>Action</th>
                        </tr>
                    </thead>


                    <tbody>
                        @foreach (var item in Model.Details)
                        {

                            <tr>
                                

                                <td>
                                    @HVAC.Models.CommonFunctions.GetShortDateFormat(item.EnquiryDate)

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EnquiryNo)
                                    @{
                                        if (@item.ProjectNumber != "")
                                        {
                                            <br />
                                            <span class="badge bg-primary">@item.ProjectPrefix</span>
                                            <div class="badge bg-primary rounded">
                                                @item.ProjectNumber

                                            </div>
                                        }
                                    }


                                </td>
                                <td>
                                    
                                    <span class="text_over colorblue">@item.ProjectName</span>

                                    <span class="text_over colorblue">@item.ProjectDescription</span>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CityName) <br />
                                    @Html.DisplayFor(modelItem => item.CountryName) <br />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PriorityName)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.EnqStageName)
                                </td>


                                <td>
                                    @{
                                        if (item.EnquiryStatus == "Unassigned" || item.EnquiryStatus == "Cancelled" || item.EnquiryStatus == "Regretted")
                                        {
                                            <span class="badge bg-danger">@item.EnquiryStatus</span>
                                        }
                                        else if (item.EnquiryStatus == "Assigned")
                                        {
                                            <span class="badge bg-warning">@item.EnquiryStatus</span>
                                        }
                                        else if (item.EnquiryStatus == "Quoted")
                                        {
                                            <span class="badge bg-primary">@item.EnquiryStatus</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">@item.EnquiryStatus</span>
                                        }

                                    }

                                </td>
                                <td>

                                    <div class="dropdown">
                                        <a href="#" class="dropdown-toggle card-drop" data-bs-toggle="dropdown" aria-expanded="true">
                                            <i class="mdi mdi-dots-horizontal font-size-18" title="Sub Menus"></i>
                                        </a>

                                        <ul class="dropdown-menu dropdown-menu-end" style="position: absolute; inset: 0px 0px auto auto; margin: 0px; transform: translate3d(-84px, 27px, 0px);" data-popper-placement="bottom-end">
                                            <li><a href="/Enquiry/GotoEstimation?EnquiryNo=@item.EnquiryNo" class="dropdown-item edit-list" data-edit-id="7"><i class="mdi mdi-file-account font-size-16 text-success me-1"></i> Estimation</a></li>
                                            <li><a href="/Enquiry/GotoQuotation?EnquiryNo=@item.EnquiryNo" class="dropdown-item edit-list" data-edit-id="7"><i class="mdi mdi-file-account font-size-16 text-success me-1"></i> Quotation</a></li>
                                            <li><a href="/JobHandover/Create?id=0&EnquiryID=@item.EnquiryID" data-bs-toggle="modal" class="dropdown-item remove-list" data-remove-id="7"><i class="mdi mdi-vector-intersection font-size-16 text-danger me-1"></i> Job HandOver</a></li>
                                        </ul>
                                    </div>
                                    @*<div class="dropdown-menu dropdown-menu-end">

                                    <a class="dropdown-item" href="/Enquiry/Quotation?id=@item.EnquiryID">Quotation</a>


                                </div>*@

                                </td>
                                <td>
                                    <div class="d-flex gap-3">

                                        <a href="@Url.Action("Create", new { id = item.EnquiryID })" class="text-success"><i class="mdi mdi-pencil font-size-18"></i></a>
                                        <a href="#" onclick="Delete(ID =@item.EnquiryID)" class="text-danger"><i class="mdi mdi-delete font-size-18"></i></a>
                                        <a target="_blank" href="/Enquiry/PrintPreview?id=@item.EnquiryID" class="text-primary" title="View Invoice"><i class="mdi mdi-eye font-size-18"></i></a>
                                        <a href="/Enquiry/PrintPdf?id=@item.EnquiryID" class="text-warning" title="Download PDF"><i class="mdi mdi-file-download font-size-18"></i></a>

                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
}
<script type="text/javascript">


    function Delete(ID) {
        Swal.fire({ title: "Are you sure?", text: "Do you want to delete this?", icon: "warning", showCancelButton: !0, confirmButtonColor: "#34c38f", cancelButtonColor: "#f46a6a", confirmButtonText: "Yes, delete it!" }).then(
            function (t) {
                if (t.value) {
                    $.ajax({
                        type: "POST",
                        url: '/Enquiry/DeleteConfirmed',
                        datatype: "html",
                        data: {
                            'id': ID
                        },
                        success: function (response) {
                            if (response.status == "OK") {
                                Swal.fire("Delete Status!", response.message, "success");
                                window.location.reload();
                            }
                            else {
                                Swal.fire("Delete Status!", response.message, "error");
                            }
                        }
                    });
                }
            });

    }
</script>
